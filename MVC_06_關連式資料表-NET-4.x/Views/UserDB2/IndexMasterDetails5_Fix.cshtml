@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexMasterDetails5</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
